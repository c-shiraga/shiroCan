<div class="form-area">
  <h2>新規登録</h2>
  <div class="error-message-area">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label "メールアドレス", class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field"%>
    </div>

    <div class="field">
      <%= f.label "アプリ内で使用する名前", class: "form-label" %><br />
      <%= f.text_field :name, class: "form-field" %>
    </div>

    <div class="field">
      <div class="form-label">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-field" %>
      
    </div>

    <div class="field">
      <%= f.label "パスワード(確認)", class: "form-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn" %>
    </div>
  
  <% end %>

  <%= render "devise/shared/links" %>
</div>
